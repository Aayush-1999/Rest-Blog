<%include partials/header%>
<div class="ui main text container segment">
    <div class="ui huge header">New <%=blog.title%></div>
    <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="post">
        <div class="field">
            <label>Title</label>
                <input type="text" name="blog[title]" value="<%=blog.title%>">
            </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%=blog.image%>">
        </div>
        <div class="field">
            <label>Enter Blog body</label>
            <textarea name="blog[body]" placeholder="Blog details"><%=blog.body%></textarea>
        </div>
        <button class="ui blue button big" type="submit">Submit</button>
    </form>
</div>

<%include partials/footer%>