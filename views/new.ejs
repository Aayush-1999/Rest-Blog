<%include partials/header%>
<div class="ui main text container segment">
    <div class="ui huge header">New Blog</div>
    <form class="ui form" action="/blogs" method="post">
        <div class="field">
            <label>Title</label>
                <input type="text" name="blog[title]" placeholder="Enter Title">
            </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder="Enter image URL">
        </div>
        <div class="field">
            <label>Enter Blog body</label>
            <textarea name="blog[body]" placeholder="Blog details"></textarea>
        </div>
        <button class="ui blue button big" type="submit">Submit</button>
    </form>
</div>

<%include partials/footer%>